{
  "name": "blogs-api",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/sequelize": "^4.28.11",
    "body-parser": "^1.19.1",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "dotenv": "8.2.0",
    "eslint-config-trybe-backend": "1.0.3",
    "express": "4.17.1",
    "express-rescue": "^1.1.31",
    "joi": "^17.6.0",
    "jsonwebtoken": "^8.5.1",
    "mocha": "^9.2.2",
    "mysql2": "2.1.0",
    "sequelize": "6.3.4",
    "shelljs": "0.8.4",
    "sinon": "^13.0.2"
  },
  "scripts": {
    "prestart": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "start": "node ./src/index.js",
    "drop": "npx sequelize-cli db:drop $",
    "seed": "npx sequelize-cli db:seed:all $",
    "debug": "nodemon index.js",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json .",
    "test": "DEBUG=true nyc --all mocha ./tests/**/*.js -t 10000 --exit",
    "compose:up": "docker-compose up --build",
    "compose:down": "docker-compose down",
    "testwatch": "nodemon index.js --exec \"mocha --recursive\""
  },
  "devDependencies": {
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-import": "2.22.1",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sequelize-cli": "6.2.0"
  }
}
